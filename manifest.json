{
  "display_information": {
      "name": "Standup Bot"
  },
  "features": {
      "app_home": {
          "home_tab_enabled": true,
          "messages_tab_enabled": false,
          "messages_tab_read_only_enabled": false
      },
      "bot_user": {
          "display_name": "Standup Bot",
          "always_online": true
      },
      "slash_commands": [
          {
              "command": "/configure",
              "description": "Configure your standup",
              "should_escape": false
          }
      ]
  },
  "oauth_config": {
      "scopes": {
          "user": [
              "im:history"
          ],
          "bot": [
              "chat:write",
              "im:history",
              "commands"
          ]
      }
  },
  "settings": {
      "event_subscriptions": {
          "user_events": [
              "message.im"
          ]
      },
      "interactivity": {
          "is_enabled": true
      },
      "org_deploy_enabled": false,
      "socket_mode_enabled": true,
      "token_rotation_enabled": false
  }
}
